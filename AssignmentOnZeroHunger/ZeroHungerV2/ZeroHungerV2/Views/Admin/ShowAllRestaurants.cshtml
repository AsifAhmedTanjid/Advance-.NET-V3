
@{
    ViewBag.Title = "ShowAllRestaurants";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>ShowAllRestaurants</h2>

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Location</th>
        <th>Contact Person</th>
        <th>Contact Number</th>
        <th>Email</th>


    </tr>
    @foreach (var r in Model)
    {
        <tr text-align: center;>
            <td>@r.RestaurantID</td>
            <td>@r.RestaurantName</td>
            <td>@r.RestaurantLocation</td>
            <td>@r.RestaurantContactPerson</td>
            <td>@r.RestaurantContactNumber</td>
            <td>@r.RestaurantEmail</td>

        </tr>
    }
</table>