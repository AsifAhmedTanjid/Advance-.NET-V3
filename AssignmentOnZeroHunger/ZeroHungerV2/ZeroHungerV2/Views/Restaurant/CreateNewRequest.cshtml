
@{
    ViewBag.Title = "CreateNewRequest";
    Layout = "~/Views/Shared/_RestaurantLayout.cshtml";
}

<h2>CreateNewRequest</h2>

<form action="" method="post">

    <input type="hidden" name="RestaurantID" class="form-control" value="@Session["restaurantid"]" />
    <input type="hidden" name="RequestTime" class="form-control" value="@DateTime.Now" />

    <label>Max Preservation Time:</label>
    <input type="datetime-local" name="MaxPreservationTime" value="@DateTime.Now" />
    <span class="text-danger"><i>@Html.ValidationMessage("MaxPreservationTime")</i></span> <br />
    <input type="hidden" name="Status" class="form-control" value="Requested" />
    <label>Food Details:</label>
    <input type="text" name="FoodDetails" class="form-control" />
    <input type="submit" name="submit" class="btn btn-success" value="Add" />
</form>