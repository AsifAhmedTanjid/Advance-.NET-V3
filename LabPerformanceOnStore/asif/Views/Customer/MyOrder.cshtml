
@{
    ViewBag.Title = "MyOrder";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<h2>MyOrder</h2>

<table class="table table-bordered">

    <tr>
        <th>Order Id</th>
        <th>Status</th>
        <th>Action</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr text-align: center;>

            <td>@p.Id</td>
            <td>@p.Status</td>
            <td><a href="/customer/Myorderdetails/@p.Id" class="btn btn-primary">Details</a>
            <a href="/customer/cancelorder/@p.Id" class="btn btn-danger">Cancel Order</a></td>

        </tr>
    }
</table>


